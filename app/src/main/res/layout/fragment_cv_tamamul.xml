<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#E3F2FD">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Foto -->
        <ImageView
            android:id="@+id/fotoKarina"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tamamul"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_border"
            android:contentDescription="Foto Tamam" />

        <!-- Judul Biodata -->
        <TextView
            android:text="BIODATA DIRI"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0D0D0D"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <!-- Isi Biodata -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama: Muhamad Tamamul Qodri\nNIM: 23050024\nTempat, Tanggal Lahir: Tangerang, 26 Februari 2004\nAlamat: Gerendeng\nNomor HP: 085693639490\nEmail: muhamadtamam588@gmail.com\nHobi: Sepak Bola"
            android:textSize="17sp"
            android:textColor="#0D0D0D"
            android:layout_marginBottom="20dp"
            android:gravity="start"
            android:lineSpacingExtra="6dp" />

        <!-- Judul Riwayat Pendidikan -->
        <TextView
            android:text="RIWAYAT PENDIDIKAN"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0D0D0D"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <!-- Riwayat Pendidikan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• SDN Gerendeng 2 (2010 - 2016)\n• SMPN 15 Tangerang (2017 - 2019)\n• SMAN 4 Tangerang (2020 - 2022)\n• Universitas Yatsi Madani (2023 - Sekarang)"
            android:textSize="17sp"
            android:textColor="#0D0D0D"
            android:gravity="start"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>
</ScrollView>
